@article{STRUG,
    author = {Xiang Deng and Ahmed Hassan Awadallah and Christopher Meek and Oleksandr Polozov and Huan Sun and Matthew Richardson},
    title = {Structure-Grounded Pretraining for Text-to-SQL},
