@article{GraphMatching,
    title = "Large-scale Semantic Parsing without Question-Answer Pairs",
    author = "Reddy, Siva and Lapata, Mirella and Steedman, Mark",
    editor = "Lin, Dekang and Collins, Michael and Lee, Lillian",
