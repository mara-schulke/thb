@article{ImprovingT2SQLEvaluation,
    author = {Catherine Finegan{-}Dollak and Jonathan K. Kummerfeld and Li Zhang and Karthik Ramanathan and Sesh Sadasivam and Rui Zhang and Dragomir R. Radev},
